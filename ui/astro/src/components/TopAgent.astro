---
interface Props {
  title: string;
  subtitle?: string;
  stat?: string;
}
const { title, subtitle = 'Play Time 463h', stat = '62%' } = Astro.props as Props;
---
<section class="panel hero">
  <div class="left">
    <div class="eyebrow">Top Agent Type</div>
    <h2>{title}</h2>
    <div class="stats">
      <div class="s"><span>Headshot %</span><b>12.6</b></div>
      <div class="s"><span>Kill/R</span><b>3.2</b></div>
      <div class="s"><span>Score/R</span><b>320.4</b></div>
      <div class="s"><span>Uptime</span><b>99.9%</b></div>
    </div>
  </div>
  <div class="right">
    <div class="big">{stat}</div>
    <div class="sub">Win Ratio</div>
  </div>
  <style>
    .hero { position: relative; overflow:hidden; display:grid; grid-template-columns: 1fr auto; padding: 22px; background: radial-gradient(600px 300px at 70% 0%, rgba(124, 93, 250, .20), transparent 60%), linear-gradient(135deg, #1f2040, #101424 70%); }
    .left { display:flex; flex-direction:column; gap:10px; }
    .eyebrow { color:#b8baf7; font-weight:700; letter-spacing:1px; text-transform:uppercase; font-size:.75rem; }
    h2 { margin:0; font-size:28px; }
    .stats { margin-top:10px; display:flex; gap:16px; flex-wrap:wrap; }
    .s { display:flex; flex-direction:column; gap:4px; background: rgba(255,255,255,.04); border:1px solid rgba(255,255,255,.06); padding:8px 10px; border-radius:12px; }
    .s span { color: var(--muted); font-size:.75rem; }
    .s b { font-size:1rem; }
    .right { display:grid; place-items:center; padding:10px 18px; }
    .big { font-size:64px; font-weight:800; background: var(--brand); -webkit-background-clip:text; background-clip:text; color: transparent; filter: drop-shadow(0 10px 30px rgba(124,93,250,.4)); }
    .sub { text-align:center; color:#b9c4df; }
  </style>
</section>

